{
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "vetur.validation.style": false,
  "javascript.format.enable": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.alwaysShowStatus": true,
  "eslint.options": {
    "extensions": [ ".js", ".ts" ]
  },
  "eslint.validate": [
    "html",
    "vue",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
  ]
}